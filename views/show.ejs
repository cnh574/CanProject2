<!DOCTYPE html>
<html lang="en">
  <%- include ('./partials/head.ejs') %>
  <body>
    <%- include ('./partials/nav.ejs') %>

    <div class="product-container">
      <!-- <div class="img-show"> -->
      <a href="<%=shades%>"></a>
      <img class="show-img" src="<%= shades.image %>" alt="" />
      <!-- </div> -->
      <div class="product-info">
        <h2 class="shades-title"><%=shades.name%></h2>
        <p><%=shades.advert%></p>
        <p><%=shades.productInfo%></p>
        <div class="button-div">
          <form action="/index<%=shades.id%>?_method=DELETE" method="POST">
            <input class="delete" type="submit" value="DELETE" />
          </form>
          <a href="/index<%=shades.id%>/edit">
            <button>Customize</button>
          </a>
        </div>
      </div>
    </div>
  </body>
</html>
